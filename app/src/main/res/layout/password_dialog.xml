<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/password_padding_vertical"
    android:paddingTop="@dimen/password_padding_horizontal"
    android:paddingRight="@dimen/password_padding_vertical"
    android:paddingBottom="@dimen/password_padding_vertical">

    <ImageView
        android:background="@drawable/background_ripple"
        android:id="@+id/iv_close"
        android:layout_gravity="end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="13dp"
        android:visibility="gone"
        android:src="@drawable/ic_icon_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="26dp"
        android:text="הכנס סיסמה"
        android:textColor="@color/black"
        android:textSize="@dimen/text_24"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/outter_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="@dimen/password_field_height"
            android:layout_height="@dimen/password_field_height"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_background_error"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1"
            android:textColor="@color/selector_text_color_error"
            android:textSize="@dimen/text_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/password_field_height"
            android:layout_height="@dimen/password_field_height"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_background_error"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1"
            android:textColor="@color/selector_text_color_error"
            android:textSize="@dimen/text_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="@dimen/password_field_height"
            android:layout_height="@dimen/password_field_height"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_background_error"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1"
            android:textColor="@color/selector_text_color_error"
            android:textSize="@dimen/text_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="@dimen/password_field_height"
            android:layout_height="@dimen/password_field_height"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_background_error"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLength="1"
            android:textColor="@color/selector_text_color_error"
            android:textSize="@dimen/text_24"
            android:textStyle="bold" />

    </LinearLayout>

    <com.pos.bringit.utils.NumberKeyboardView
        android:id="@+id/numberKeyboardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text=""
        android:visibility="visible" />

</LinearLayout>
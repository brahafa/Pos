<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <TextView
        style="@style/TimesText"
        android:gravity="center"
        android:id="@+id/tv_name"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="160"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <TextView
        style="@style/TimesText"
        android:gravity="center"
        android:id="@+id/tv_date"
        android:layout_height="wrap_content"
        android:layout_width="0dp"

        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_name"
        app:layout_constraintHorizontal_weight="96"
        app:layout_constraintStart_toEndOf="@+id/tv_phone"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:text="Date" />

    <TextView
        style="@style/TimesText"
        android:gravity="center"
        android:id="@+id/tv_phone"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toStartOf="@id/tv_date"
        app:layout_constraintHorizontal_weight="96"
        app:layout_constraintStart_toEndOf="@+id/tv_address"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:text="Phone" />

    <TextView
        style="@style/TimesText"
        android:gravity="center"
        android:id="@+id/tv_address"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toStartOf="@id/tv_phone"
        app:layout_constraintHorizontal_weight="255"
        app:layout_constraintStart_toEndOf="@+id/tv_order_num"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:text="Address" />

    <TextView
        style="@style/TimesText"
        android:gravity="center"
        android:id="@+id/tv_order_num"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toStartOf="@id/tv_address"
        app:layout_constraintHorizontal_weight="70"
        app:layout_constraintStart_toEndOf="@+id/tv_invoice_num"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:text="Order number" />

    <TextView
        style="@style/TimesText"
        android:gravity="center"
        android:id="@+id/tv_invoice_num"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toStartOf="@id/tv_order_num"
        app:layout_constraintHorizontal_weight="129"
        app:layout_constraintStart_toEndOf="@+id/iv_tag"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:text="Invoice number" />

    <ImageView
        android:gravity="center"
        android:id="@+id/iv_tag"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:src="@drawable/ic_icon_tag"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toStartOf="@id/tv_invoice_num"
        app:layout_constraintHorizontal_weight="70"
        app:layout_constraintStart_toEndOf="@+id/tv_edit"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <TextView
        style="@style/TimesText.Bold"
        android:gravity="center"
        android:id="@+id/tv_edit"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="Go"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toStartOf="@+id/iv_tag"
        app:layout_constraintHorizontal_weight="96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:text="Go" />

</androidx.constraintlayout.widget.ConstraintLayout>
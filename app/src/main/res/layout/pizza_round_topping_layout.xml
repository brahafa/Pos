        <!--                      iv_pizza_lh, tv_num_pizza_lh,-->

        <!--                      iv_pizza_tl, tv_num_pizza_tl,-->
        <!--                      iv_pizza_tr, tv_num_pizza_tr,-->
        <!--                      iv_pizza_br, tv_num_pizza_br,-->
        <!--                      iv_pizza_bl, tv_num_pizza_bl" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</HorizontalScrollView>
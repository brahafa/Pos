<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_order_field_white"
    android:layout_height="60dp"
    android:layout_marginBottom="6dp"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/iv_level"
        android:layout_height="0dp"
        android:layout_width="10dp"
        android:src="@drawable/background_level"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TextStyle24"
        android:id="@+id/tv_system"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="system" />

    <TextView
        style="@style/TextStyle22"
        android:id="@+id/tv_status"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="status" />


    <TextView
        style="@style/TextStyle23"
        android:id="@+id/tv_name"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Le ME" />


    <TextView
        style="@style/TextStyle21"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:id="@+id/tv_not_paid"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="13dp"
        android:layout_width="wrap_content"
        android:text="לא שולם"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_dot_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="not paid"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/password_padding_vertical"
    android:paddingLeft="@dimen/password_padding_vertical"
    android:paddingRight="@dimen/password_padding_vertical"
    android:paddingTop="@dimen/password_padding_horizontal">

    <ImageView
        android:background="@drawable/background_ripple_black"
        android:id="@+id/iv_close"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="@dimen/half_margin"
        android:src="@drawable/ic_clear"
        app:tint="@color/white"
        tools:visibility="visible" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_width="wrap_content"
        android:text="Enter amount"
        android:textColor="@color/black"
        android:textSize="@dimen/text_24"
        android:textStyle="bold" />

    <TextView
        style="@style/TextStyle19"
        android:background="@drawable/selector_background_error"
        android:gravity="center"
        android:id="@+id/tv_amount"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginBottom="@dimen/outter_margin"
        android:layout_width="146dp"
        android:lines="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <Button
        style="@style/TextStyle20"
        android:background="@drawable/background_add_order"
        android:gravity="center"
        android:id="@+id/tv_confirm"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="13dp"
        android:layout_width="146dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:text="Confirm" />


    <com.pos.bringit.utils.NumberKeyboardView
        android:id="@+id/numberKeyboardView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</LinearLayout>
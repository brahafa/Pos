<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pale_lavender" />
        </shape>
    </item>
    <item
        android:right="13dp"
        android:left="13dp">
        <shape android:shape="rectangle">
            <corners android:radius="13dp" />
            <stroke
                android:color="@color/indigo"
                android:width="2dp" />
            <solid android:color="@color/pale_grey" />
        </shape>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- "background shadow" -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <corners android:radius="13dp" />
        </shape>
    </item>
    <!-- background color -->
    <item
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:radius="13dp" />
        </shape>
    </item>
    <!-- bottom left shadow -->
    <item
        android:right="34dp"
        android:top="34dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerX="0.1"

                android:endColor="#3324003e"
                android:startColor="#4b0082" />

            <corners android:bottomLeftRadius="13dp" />
        </shape>
    </item>

    <!-- bottom right shadow -->
    <item
        android:left="34dp"
        android:top="34dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:centerX="0.1"

                android:endColor="#3324003e"
                android:startColor="#4b0082" />

            <corners android:bottomRightRadius="13dp" />
        </shape>
    </item>
    <!-- top right shadow -->
    <item
        android:bottom="34dp"
        android:left="34dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:centerX="0.1"

                android:endColor="#3324003e"
                android:startColor="#4b0082" />

            <corners android:topRightRadius="13dp" />
        </shape>
    </item>
    <!-- top left shadow -->
    <item
        android:bottom="34dp"
        android:right="34dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:centerX="0.1"
                android:endColor="#3324003e"
                android:startColor="#4b0082" />

            <corners android:topLeftRadius="13dp" />
        </shape>
    </item>
</layer-list>
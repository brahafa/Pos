<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pale_lavender" />
        </shape>
    </item>
    <item
        android:bottom="48dp"
        android:top="48dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/pale_grey" />
            <stroke
                android:color="@color/indigo_60"
                android:width="1dp" />
            <corners android:radius="13dp" />
        </shape>
    </item>
</layer-list>